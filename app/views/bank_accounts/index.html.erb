<p style="color: green"><%= notice %></p>

<h1>Bank accounts</h1>

<div id="bank_accounts">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Bank Account</th>
      <th scope="col">Transaction Limit</th>
      <th scope="col">Bank Agency</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <%= render bank_account %>
        <td>
          <%= link_to "Show", bank_account %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to "New bank account", new_bank_account_path %>
